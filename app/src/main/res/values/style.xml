<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MovieItemTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="MovieItemTitleTextStyle" parent="MovieItemTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieItemRunningDateTimeTexStyle" parent="MovieItemTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ScrollViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TicketingTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="TicketingTitleTextStyle" parent="TicketingTextStyle">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TicketingContentTextStyle" parent="TicketingTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TicketingTicketCountTextStyle" parent="TicketingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TicketingSpinnerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TicketingButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SeatSelectionSeatTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">26dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/seat_background_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SeatSelectionTitlePriceTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TicketingResultTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>