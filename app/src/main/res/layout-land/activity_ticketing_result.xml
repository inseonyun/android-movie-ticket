<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ticketingresult.TicketingResultActivity">

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ticketing_header_color"
        android:gravity="center|bottom"
        android:paddingBottom="12dp"
        android:text="@string/ticketing_cancel_info"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintDimensionRatio="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/TicketingResultTextStyle"
        android:layout_marginTop="15dp"
        android:paddingVertical="10dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_info"
        tools:text="해리 포터와 마법사의 돌" />

    <LinearLayout
        android:id="@+id/linear_layout_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <TextView
            android:id="@+id/tv_date"
            style="@style/TicketingResultTextStyle"
            android:layout_marginHorizontal="0dp"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            tools:text="2024.03.01" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/TicketingResultTextStyle"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            tools:text="12:00" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_regular_count"
        style="@style/TicketingResultTextStyle"
        android:paddingVertical="5dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_pay_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="일반 1명" />

    <TextView
        android:id="@+id/tv_pay_result"
        style="@style/TicketingResultTextStyle"
        android:paddingVertical="5dp"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="13,000원 (현장 결제)" />


</androidx.constraintlayout.widget.ConstraintLayout>
