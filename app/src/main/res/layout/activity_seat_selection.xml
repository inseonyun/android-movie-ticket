<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seat_selection_background_color"
    tools:context=".ui.seatselection.SeatSelectionActivity">

    <TextView
        android:id="@+id/tv_header_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/seat_selection_screen_color"
        android:gravity="center"
        android:padding="9dp"
        android:text="@string/seat_selection_screen"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingVertical="50dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@id/tv_header_screen"
        app:layout_constraintStart_toStartOf="@id/tv_header_screen"
        app:layout_constraintTop_toBottomOf="@id/tv_header_screen">

        <TableLayout
            android:id="@+id/table_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="A1"
                    tools:textColor="@color/seat_b_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="A2"
                    tools:textColor="@color/seat_b_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="A3"
                    tools:textColor="@color/seat_b_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="A4"
                    tools:textColor="@color/seat_b_rank_color" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="B1"
                    tools:textColor="@color/seat_b_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="B2"
                    tools:textColor="@color/seat_b_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="B3"
                    tools:textColor="@color/seat_b_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="B4"
                    tools:textColor="@color/seat_b_rank_color" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="C1"
                    tools:textColor="@color/seat_a_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="C2"
                    tools:textColor="@color/seat_a_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="C3"
                    tools:textColor="@color/seat_a_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="C4"
                    tools:textColor="@color/seat_a_rank_color" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="D1"
                    tools:textColor="@color/seat_a_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="D2"
                    tools:textColor="@color/seat_a_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="D3"
                    tools:textColor="@color/seat_a_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="D4"
                    tools:textColor="@color/seat_a_rank_color" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="E1"
                    tools:textColor="@color/seat_s_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="E2"
                    tools:textColor="@color/seat_s_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="E3"
                    tools:textColor="@color/seat_s_rank_color" />

                <TextView
                    style="@style/SeatSelectionSeatTextStyle"
                    tools:text="E4"
                    tools:textColor="@color/seat_s_rank_color" />
            </TableRow>

        </TableLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_ok"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/SeatSelectionTitlePriceTextStyle"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="영화제목" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/SeatSelectionTitlePriceTextStyle"
            android:textColor="@color/seat_selection_price_color"
            android:textSize="18sp"
            tools:text="0원" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/button_rectangle"
        android:enabled="false"
        android:paddingVertical="20dp"
        android:text="@string/seat_selection_button_ok"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>